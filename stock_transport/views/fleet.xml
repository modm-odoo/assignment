<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="category_inherit_view" model="ir.ui.view">
        <field name="name">fleet.vehicle.model.category.inherit.view</field>
        <field name="model">fleet.vehicle.model.category</field>
        <field name="inherit_id" ref="fleet.fleet_vehicle_model_category_view_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//tree" position="inside">
                <field name="max_weight"></field>
                <field name="max_volume"></field>
                </xpath>
        </field>
    </record>
</odoo>
